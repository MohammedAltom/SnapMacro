<Window x:Class="SnapMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnapMacro"
        mc:Ignorable="d"
        Title="MainWindow" Height="219" Width="230">
    <Grid>
        <StackPanel>
            <Label Content="Accounts Number" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBox x:Name="AccText"  Width="130" Margin="0,1,0,0" HorizontalContentAlignment="Center"/>
            <Button x:Name="ChooserBtn" Content="Get Users File" Width="130" Height="20" HorizontalAlignment="Center" Margin="0,15,0,0" Click="ChooserBtn_Click" />
            <Label x:Name="FileLabel" Content="No File!" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <Button x:Name="SaveBtn" Content="Save" Width="130" Height="20" Click="SaveBtn_Click" Margin="0,15,0,0"/>

        </StackPanel>

    </Grid>
</Window>
